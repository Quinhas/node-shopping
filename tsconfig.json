{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  }
}
